{
  "name": "api",
  "version": "1.0.0",
  "description": "a seed project for creating http service using express written in typescript",
  "main": "app.js",
  "scripts": {
    "test": "jest --forceExit",
    "start": "npm run dev",
    "dev": "nodemon --inspect --exec ts-node src/index.ts",
    "prod": "cross-env NODE_ENV=production nodemon --exec ts-node src/index.ts",
    "build": "npm run build:dev",
    "build:dev": "webpack --config ./webpack.config.js --progress --profile --color --display-error-details --display-cached && npm run copy-files",
    "build:prod": "cross-env NODE_ENV=production webpack --config ./webpack.config.js  --progress --profile --color --display-error-details --display-cached --bail && npm run copy-files",
    "copy-files": "node copyFiles.js",
    "clean": "npm cache clear && rimraf -- dist",
    "compile-to-js": "tsc -p ./tsconfig.json"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "del": "^3.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "express-status-monitor": "^1.0.1",
    "helmet": "^3.9.0",
    "immutable": "^3.8.2",
    "lodash": "^4.17.4",
    "lokijs": "^1.5.1",
    "method-override": "^2.3.10",
    "morgan": "^1.9.0",
    "mssql": "^4.1.0",
    "multer": "^1.3.0",
    "rxjs": "^5.5.5",
    "wicket": "^1.3.2",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@reactivex/rxjs": "^5.5.5",
    "@types/bluebird": "^3.5.18",
    "@types/body-parser": "1.16.8",
    "@types/compression": "0.0.35",
    "@types/cookie-parser": "^1.4.1",
    "@types/del": "^3.0.0",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.0.39",
    "@types/express-session": "1.15.6",
    "@types/helmet": "0.0.37",
    "@types/jest": "^22.1.1",
    "@types/lodash": "^4.14.88",
    "@types/lokijs": "^1.5.0",
    "@types/method-override": "0.0.31",
    "@types/morgan": "^1.7.35",
    "@types/mssql": "^4.0.6",
    "@types/multer": "^1.3.6",
    "@types/node": "^9.4.0",
    "@types/supertest": "^2.0.4",
    "@types/webpack": "^3.8.1",
    "@types/winston": "^2.3.7",
    "awesome-typescript-loader": "^3.4.1",
    "cross-env": "^5.1.1",
    "jest": "^22.1.4",
    "nodemon": "^1.12.5",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.3",
    "ts-node": "^4.0.1",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/src/**/*.spec.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
